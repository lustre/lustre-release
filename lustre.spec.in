%endif
Requires: attr, rsync, perl, lsof, /usr/bin/getconf
%if %{with mpi}
%if %{mpi_name} == "mpich"
BuildRequires: mpich-devel
%endif
%if %{mpi_name} == "openmpi"
%if %{_vendor} == "redhat" || 0%{?suse_version} < 1500
