+		 return -EFAULT;
+
+	fieinfo->fi_extents_mapped++;
+	if (fieinfo->fi_extents_mapped == fieinfo->fi_extents_max)
+		 return 1;
+
+	return (flags & FIEMAP_EXTENT_LAST) ? 1 : 0;
+}
