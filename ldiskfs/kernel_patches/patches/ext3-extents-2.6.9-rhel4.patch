+static inline void
+ext3_ext_put_in_cache(struct ext3_extents_tree *tree, __u32 block,
+		      __u32 len, __u32 start, int type)
+{
+	EXT_ASSERT(len > 0);
+	if (tree->cex) {
+		tree->cex->ec_type = type;
+		tree->cex->ec_block = block;
+		tree->cex->ec_len = len;
+		tree->cex->ec_start = start;
+	}
