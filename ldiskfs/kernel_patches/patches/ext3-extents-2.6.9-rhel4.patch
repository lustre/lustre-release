+static struct ext3_extent_idx *
+ext3_ext_last_covered(struct ext3_extent_header *hdr, unsigned long block)
+{
+	struct ext3_extent_idx *ix;
+	
+	ix = EXT_LAST_INDEX(hdr);
+	while (ix != EXT_FIRST_INDEX(hdr)) {
+		if (ix->ei_block <= block)
+			break;
+		ix--;
+	}
+	return ix;
+}
