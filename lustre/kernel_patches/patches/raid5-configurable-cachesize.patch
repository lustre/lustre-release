 						    conf->device_lock,
 						    unplug_slaves(conf->mddev);
@@ -1637,7 +1638,7 @@ static int run (mddev_t *mddev)
 	conf->chunk_size = mddev->chunk_size;
 	conf->level = mddev->level;
 	conf->algorithm = mddev->layout;
