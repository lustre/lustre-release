 	mddev->size &= ~(mddev->chunk_size/1024 -1);
@@ -1957,5 +1958,6 @@ static void raid5_exit (void)
 
 module_init(raid5_init);
 module_exit(raid5_exit);
+module_param(raid5_nr_stripes, int, 0644);
