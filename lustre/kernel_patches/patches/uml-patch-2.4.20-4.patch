+void write_sigio_workaround(void)
+{
+	unsigned long stack;
+	int err;
+
+	sigio_lock();
+	if(write_sigio_pid != -1)
+		goto out;
+
+	err = os_pipe(write_sigio_fds, 1, 1);
+	if(err){
+		printk("write_sigio_workaround - os_pipe 1 failed, "
+		       "errno = %d\n", -err);
