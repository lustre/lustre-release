+
+$(ARCH_DIR)/util/mk_constants : $(ARCH_DIR)/util/mk_constants_user.c \
+	$(ARCH_DIR)/util/mk_constants_kern.c 
+	$(MAKE) $(MFLAGS) -C $(ARCH_DIR)/util mk_constants
+
+export SUBARCH USER_CFLAGS OS
