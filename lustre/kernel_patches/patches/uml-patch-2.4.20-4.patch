+static int ubd_ioctl(struct inode * inode, struct file * file,
+		     unsigned int cmd, unsigned long arg)
+{
+	struct hd_geometry *loc = (struct hd_geometry *) arg;
+ 	struct ubd *dev;
+	int n, minor, err;
+	struct hd_driveid ubd_id = {
+		.cyls		= 0,
+		.heads		= 128,
+		.sectors	= 32,
+	};
+	
+        if(!inode) return(-EINVAL);
+	minor = MINOR(inode->i_rdev);
+	n = minor >> UBD_SHIFT;
+	if(n >= MAX_DEV)
+		return(-EINVAL);
+	dev = &ubd_dev[n];
+	switch (cmd) {
+	        struct hd_geometry g;
+		struct cdrom_volctrl volume;
+	case HDIO_GETGEO:
+		if(!loc) return(-EINVAL);
+		g.heads = 128;
+		g.sectors = 32;
+		g.cylinders = dev->size / (128 * 32 * hardsect_sizes[minor]);
+		g.start = 2;
+		return(copy_to_user(loc, &g, sizeof(g)) ? -EFAULT : 0);
+	case BLKGETSIZE:   /* Return device size */
+		if(!arg) return(-EINVAL);
+		err = verify_area(VERIFY_WRITE, (long *) arg, sizeof(long));
+		if(err)
+			return(err);
+		put_user(ubd_part[minor].nr_sects, (long *) arg);
+		return(0);
+	case BLKRRPART: /* Re-read partition tables */
+		return(ubd_revalidate(inode->i_rdev));
+
+	case HDIO_SET_UNMASKINTR:
+		if(!capable(CAP_SYS_ADMIN)) return(-EACCES);
+		if((arg > 1) || (minor & 0x3F)) return(-EINVAL);
+		return(0);
+
+	case HDIO_GET_UNMASKINTR:
+		if(!arg)  return(-EINVAL);
+		err = verify_area(VERIFY_WRITE, (long *) arg, sizeof(long));
+		if(err)
+			return(err);
+		return(0);
+
+	case HDIO_GET_MULTCOUNT:
+		if(!arg)  return(-EINVAL);
+		err = verify_area(VERIFY_WRITE, (long *) arg, sizeof(long));
+		if(err)
+			return(err);
+		return(0);
+
+	case HDIO_SET_MULTCOUNT:
+		if(!capable(CAP_SYS_ADMIN)) return(-EACCES);
+		if(MINOR(inode->i_rdev) & 0x3F) return(-EINVAL);
+		return(0);
+
+	case HDIO_GET_IDENTITY:
+		ubd_id.cyls = dev->size / (128 * 32 * hardsect_sizes[minor]);
+		if(copy_to_user((char *) arg, (char *) &ubd_id, 
+				 sizeof(ubd_id)))
+			return(-EFAULT);
+		return(0);
+		
+	case CDROMVOLREAD:
+		if(copy_from_user(&volume, (char *) arg, sizeof(volume)))
+			return(-EFAULT);
+		volume.channel0 = 255;
+		volume.channel1 = 255;
+		volume.channel2 = 255;
+		volume.channel3 = 255;
+		if(copy_to_user((char *) arg, &volume, sizeof(volume)))
+			return(-EFAULT);
+		return(0);
+
+	default:
+		return blk_ioctl(inode->i_rdev, cmd, arg);
+	}
+}
