+int os_file_mode(char *file, struct openflags *mode_out)
+{
+	*mode_out = OPENFLAGS();
+
+	if(!access(file, W_OK)) *mode_out = of_write(*mode_out);
+	else if(errno != EACCES) 
+		return(-errno);
+
+	if(!access(file, R_OK)) *mode_out = of_read(*mode_out);
+	else if(errno != EACCES) 
+		return(-errno);
+
+	return(0);
