+	int n;
+	char c;
+
+	n = read(fd, &c, sizeof(c));
+	if(n != sizeof(c)){
+		printk("read_sigio_fd - read failed, errno = %d\n", errno);
+		return(-errno);
+	}
+	return(n);
+}
