+void forward_ipi(int fd, int pid)
+{
+	if(fcntl(fd, F_SETOWN, pid) < 0){
+		int save_errno = errno;
+		if(fcntl(fd, F_GETOWN, 0) != pid){
+			printk("forward_ipi: F_SETOWN failed, fd = %d, "
+			       "me = %d, target = %d, errno = %d\n", fd, 
+			       os_getpid(), pid, save_errno);
+		}
+	}
+}
