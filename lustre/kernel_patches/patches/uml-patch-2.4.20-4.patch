+		printk("Failed to get size of backing file \"%s\", "
+		       "errno = %d\n", file, -err);
+		return(err);
+	}
+
+  	if(actual != size){
+		printk("Size mismatch (%ld vs %ld) of COW header vs backing "
+		       "file\n", size, actual);
+		return(-EINVAL);
+	}
+	if(buf.st_mtime != mtime){
+		printk("mtime mismatch (%ld vs %ld) of COW header vs backing "
+		       "file\n", mtime, buf.st_mtime);
+		return(-EINVAL);
+	}
