+static void finish_fork_handler(int sig)
+{
+	UPT_SC(&current->thread.regs.regs) = (void *) (&sig + 1);
+	suspend_new_thread(current->thread.mode.tt.switch_pipe[0]);
+	
+	init_new_thread_signals(1);
+	enable_timer();
+	sti();
