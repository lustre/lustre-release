+static int ubd_release(struct inode * inode, struct file * file)
+{
+        int n, offset;
+
+	n =  DEVICE_NR(inode->i_rdev);
+	offset = n << UBD_SHIFT;
+	if(n >= MAX_DEV)
+		return -ENODEV;
+
+	spin_lock(&ubd_lock);
+	if(--ubd_dev[n].count == 0)
+		ubd_close(&ubd_dev[n]);
+	spin_unlock(&ubd_lock);
+
+	return(0);
