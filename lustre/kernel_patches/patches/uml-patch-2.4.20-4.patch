+	err = slirp_datachan(&mfd, &sfd);
+	if(err)
+		return(err);
+
+	pid = slirp_tramp(pri->argw.argv, sfd);
+
+	if(pid < 0){
+		printk("slirp_tramp failed - errno = %d\n", pid);
+		os_close_file(sfd);	
+		os_close_file(mfd);	
+		return(pid);
+	}
