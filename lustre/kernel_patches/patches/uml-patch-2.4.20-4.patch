+			       "errno = %d\n", errno);
+			return(-errno);
+		}
+		sencap = 0;
+		if(ioctl(sfd, SIOCSIFENCAP, &sencap) < 0){
+			printk("Failed to set slip encapsulation - "
+			       "errno = %d\n", errno);
+			return(-errno);
+		}
+	}
