# Read in library functions
if [ "$(type -t patch_file_name)" != function ]
then
	if ! [ -r @SCRIPTS@/patchfns ]
	then
		echo "Cannot read library @SCRIPTS@/patchfns" >&2
		exit 1
	fi
	. @SCRIPTS@/patchfns
fi

usage()
{
	echo $"Usage: quilt applied [-n] [patch]"
	if [ x$1 = x-h ]
	then
		echo $"

Print a list of applied patches.

-n	Print patch file names instead of patch names.

"

		exit 0
	else
		exit 1
	fi
}

options=`getopt -o nh -- "$@"`

if [ $? -ne 0 ]
then
	usage
fi

eval set -- "$options"

while true
do
	case "$1" in
	-n)
		opt_filenames=1
		shift ;;
	-h)
		usage -h ;;
	--)
		shift
		break ;;
	esac
done

if [ $# -gt 1 ]
then
	usage
elif [ $# -eq 1 ]
then
	patch=$(stripit $1)
	if ! is_applied "$patch"
	then
		echo $"Patch $patch is not applied" >&2
		exit 1
	fi
else
	patch=$(top_patch)
fi

for patch in $(applied_before "$patch") $patch
do
	[ -n "$opt_filenames" ] && patch=$(patch_file_name $patch)
	echo $patch
done

