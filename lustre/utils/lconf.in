  recv_mem %d
  add_autoconn %s %s %d %s
  quit""" % (net_type,
             send_mem,
             recv_mem,
             nid, hostaddr, port, flags )
            self.run(cmds)
    
    def connect(self, srv):
        self.add_uuid(srv.net_type, srv.nid_uuid, srv.nid)
        if srv.net_type  in ('tcp',) and not config.lctl_dump:
            flags = 's'
